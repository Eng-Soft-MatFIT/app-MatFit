<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_alunos">

    <fragment
        android:id="@+id/nav_alunos"
        android:name="com.devmasterteam.tasks.view.AllTasksFragment"
        android:label="@string/textAlunos"
        tools:layout="@layout/fragment_alunos">
        <argument
            android:name="taskfilter"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/nav_funcionarios"
        android:name="com.devmasterteam.tasks.view.AllTasksFragment"
        android:label="@string/textFuncionarios"
        tools:layout="@layout/fragment_alunos">
        <argument
            android:name="taskfilter"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/nav_equipamentos"
        android:name="com.devmasterteam.tasks.view.AllTasksFragment"
        android:label="@string/textEquipamentos"
        tools:layout="@layout/fragment_alunos">
        <argument
            android:name="taskfilter"
            android:defaultValue="2"
            app:argType="integer" />
    </fragment>

</navigation>